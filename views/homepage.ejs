
<html>
    
    <head>
        <meta charset="utf-8">
        
        <title>Clothing Shopee Inventory Management</title>
        <!-- Tell the browser to be responsive to screen width -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
      
        <!-- Font Awesome -->
        <link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css">
        <!-- Theme style -->
        <link rel="stylesheet" href="dist/css/adminlte.min.css">
        <!-- Google Font: Source Sans Pro -->
        <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <style>
        h1
        {
            text-align: center;
        }
        a
        {
            text-decoration: none;
        }
    </style>
</head>
<body >
    <div class="wrapper">
    
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light"-->
        <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"> 
                                           <i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                <a href="/" class="nav-link">Home</a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
            <a href="#" class="brand-link">
              <img src="logo.png"
                   alt="Central store Logo"
                   class="brand-image img-circle elevation-10">
              <span class="brand-text font-weight-light">Clothing Shopee</span>
            </a>
            <!-- Sidebar -->
            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                      <li class="nav-item">
                        <a href='/create' class="nav-link">
                          <i class="nav-icon far fa-square text-info"></i>
                          <p>Add Product</p>
                        </a>
                      </li>
                      <li class="nav-item">
                        <a href="/updateitems" class="nav-link">
                          <i class="nav-icon far fa-square text-info"></i>
                          <p class="text">Update stock</p>
                        </a>
                      </li>
                      <li class="nav-item">
                        <a href="/deleteitems" class="nav-link">
                          <i class="nav-icon far fa-square text-info"></i>
                          <p class="text">Delete Product</p>
                        </a>
                      </li>
                      
                    </ul>
                </nav>
            </div>
            <!-- /.sidebar -->

        </aside>
        
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            
            <section class="content-header">
                <h1>Clothing Shopee Inventory Management</h1>
            </section>
            <div class="card">
                <div class="card-header">
                  <h3 class="card-title">Stock Details</h3>
            
                  <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                      <i class="fas fa-minus"></i></button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                      <i class="fas fa-times"></i></button>
                  </div>
                </div>
            </div>
            <section class="content">
              <div class="card-body table-responsive p-0" style="height: 400px, width=100%;">
                <table class="table table-striped table-head-fixed text-nowrap">
                <thread>
                    <tr>
                        <th style="width: 10%" >Product ID</th>
                        <th style="width: 10%" >Category</th>
                        <th style="width: 10%" >Product</th>
                        <th style="width: 10%" >Quantity</th>
                        <th style="width: 10%" >Price</th>
                        <th style="width: 20%" > </th>
                    </tr>
                </thread>
                <tbody>
                    <% for(var i=0;i<data.length;i++) {%>
                        <tr>
                            <td><%= data[i].pid %></td>
                            <td><%= data[i].category %></td>
                            <td><%= data[i].product %></td>
                            <td><div class="progress progress-xs">
                                <div class="progress-bar bg-danger" style="width:20%"></div>
                                </div>
                                <small><%= data[i].stock %></small></td>
                            <td><%= data[i].price %></td>
                            <td class="project-actions text-right">
                                <a class="btn btn-info btn-sm" href="#"><i class="fas fa-pencil-alt"></i>Edit</a>
                                <a class="btn btn-danger btn-sm" href="#" ><i class="fas fa-trash"></i>Delete</a>
                            </td>
                        </tr>
                       <% } %>
                       
                </tbody>
                </table>
        
            </div>
         
                
            </section>
        </div>
        
    </div>

    
</body>
</html>